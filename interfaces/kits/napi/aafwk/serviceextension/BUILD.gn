import("//ark/ts2abc/ts2panda/ts2abc_config.gni")
import("//build/ohos.gni")

ts2abc_gen_abc("gen_service_extension_abc") {
  src_js = rebase_path("service_extension.js")
  dst_file = rebase_path(target_out_dir + "/service_extension.abc")
  in_puts = [ "service_extension.js" ]
  out_puts = [ target_out_dir + "/service_extension.abc" ]
  extra_args = [ "--module" ]
}

gen_js_obj("service_extension_js") {
  input = "service_extension.js"
  output = target_out_dir + "/service_extension.o"
}

gen_js_obj("service_extension_abc") {
  input = get_label_info(":gen_service_extension_abc", "target_out_dir") +
          "/service_extension.abc"
  output = target_out_dir + "/service_extension_abc.o"
  dep = ":gen_service_extension_abc"
}

ohos_shared_library("serviceextension_napi") {
  sources = [ "service_extension_module.cpp" ]

  deps = [
    ":service_extension_abc",
    ":service_extension_js",
  ]

  external_deps = [ "napi:ace_napi" ]

  relative_install_dir = "module/application"
  subsystem_name = "aafwk"
  part_name = "aafwk_standard"
}
