import("//build/test.gni")
import("//foundation/aafwk/standard/aafwk.gni")

module_output_path = "ability_tools/tools"

config("test_ability_tool_config") {
  include_dirs = [
    "${aafwk_path}/tools/test/mock",
    "//third_party/googletest/googlemock/include",
  ]
}

test_ability_tool_mock_sources =
    [ "${aafwk_path}/tools/test/mock/mock_ability_manager_stub.cpp" ]

ohos_unittest("ability_tool_test") {
  module_out_path = module_output_path

  sources = [ "ability_tool_test.cpp" ]
  sources += test_ability_tool_mock_sources

  configs = [ ":test_ability_tool_config" ]

  cflags = []
  if (target_cpu == "arm") {
    cflags += [ "-DBINDER_IPC_32BIT" ]
  }

  deps = [
    "${aafwk_path}/tools/aa:tools_aa_source_set",
    "//third_party/googletest:gmock_main",
    "//third_party/googletest:gtest_main",
  ]

  external_deps = [
    "ability_base:configuration",
    "bundle_framework:appexecfwk_base",
    "hiviewdfx_hilog_native:libhilog",
    "ipc:ipc_core",
  ]
}

group("unittest") {
  testonly = true

  deps = [ ":ability_tool_test" ]
}
