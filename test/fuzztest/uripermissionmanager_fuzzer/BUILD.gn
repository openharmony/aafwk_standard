import("//build/config/features.gni")
import("//build/ohos.gni")
import("//build/test.gni")
import("//foundation/aafwk/standard/aafwk.gni")
module_output_path = "ability_runtime/uripermmgr"

##############################fuzztest##########################################
ohos_fuzztest("UriPermissionManagerFuzzTest") {
  module_out_path = module_output_path

  fuzz_config_file = "${aafwk_path}/test/fuzztest/uripermissionmanager_fuzzer"
  include_dirs = [ "${aafwk_path}/services/uripermmgr/include" ]
  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]
  sources = [ "uripermissionmanager_fuzzer.cpp" ]

  configs = [ "${services_path}/common:common_config" ]

  deps = [
    "${aafwk_path}/frameworks/kits/ability/native:abilitykit_native",
    "${aafwk_path}/interfaces/innerkits/base:base",
    "${aafwk_path}/interfaces/innerkits/uri_permission:uri_permission_mgr",
    "${aafwk_path}/interfaces/innerkits/want:want",
    "${services_path}/uripermmgr:libupms",
  ]

  external_deps = [
    "ability_base:zuri",
    "access_token:libaccesstoken_sdk",
    "bundle_framework:appexecfwk_base",
    "bundle_framework:appexecfwk_core",
    "ipc:ipc_core",
    "safwk:system_ability_fwk",
    "samgr_standard:samgr_proxy",
    "utils_base:utils",
  ]
}

###############################################################################
group("fuzztest") {
  testonly = true
  deps = []
  deps += [
    # deps file
    ":UriPermissionManagerFuzzTest",
  ]
}
