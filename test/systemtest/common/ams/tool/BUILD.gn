  ]

  configs = [
    ":system_test_ability_util_config",
    "//foundation/aafwk/standard/services/abilitymgr:abilityms_config",
    "//foundation/aafwk/standard/services/test/moduletest/module_test_dump_util:module_test_dump_util_config",
